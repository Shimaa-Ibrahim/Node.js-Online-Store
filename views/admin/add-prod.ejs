<%- include('../includes/head.ejs') %>  
    
    </head>
    <body>
        <%- include('../includes/navigations.ejs') %>
        <form 
        method="POST" 
        action="<% if (locals.product) { %>/admin/edit-prod/<%=product.id%> <% } else { %> /admin/add-prod<% } %>"
        enctype="multipart/form-data"
        >
            <div id="prod-container">
                <label for="title">Product title</label>
                <input type="text" placeholder="product name" name="title" <% if (locals.product) { %> value="<%=product.title%> <% } %> ">
                <label for="price">Product Price</label>
                <input type="number" step="0.01" min="0" placeholder="product price" name="price" <% if (locals.product) { %> value=<%=product.price%> <% } %> >
                <label for="imageURL">Product Image</label>
                <input class="form-control my-1" type="file" placeholder="product image" name="imageURL">
                <label for="description">Product Description</label>
                <textarea placeholder="product description" name="description" rows="5"> <% if (locals.product) { %> <%=product.description%> <% } %>  </textarea>
                <input type="hidden" name="id" <% if (locals.product) { %> value="<%=product.id%> <% } %> ">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit"><%= btn %> Product</button>
            </div>
        </form>
        <% if (errorMessages.length > 0 ) { %>
            <div class="alert alert-danger text-center" role="alert">
                <ul class="list-unstyled">
                        <li>ERROR!</li>
                    <% for(let msg of errorMessages) { %>
                        <li> <%= msg %> </li>
                    <% } %>
                </ul>
            </div>
        <% } %>
    </body>
</html>
